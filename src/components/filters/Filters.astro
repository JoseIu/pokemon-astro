---
import { frameworks } from 'src/constant/siteInfo';

const filtersPaths = [
  {
    framework: 'React',
    href: '/proyects/react/1'
  },
  {
    framework: 'Angular',
    href: '/proyects/angular/1'
  }
];

const currentPage = Astro.url.pathname;

const currentFilter = frameworks.find(framework => currentPage.includes(framework.toLowerCase()));
---

<div class="filters">
  {
    filtersPaths.map(filter => (
      <a class="filters__btn" href={filter.href}>
        {filter.framework}

        {currentFilter === filter.framework.toLocaleLowerCase() && (
          <div class="filters__active" transition:name="menu-line" />
        )}
      </a>
    ))
  }
</div>

<style>
  .filters {
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  .filters__btn {
    position: relative;
    padding: 0.3rem 2rem;
    border: 1px solid var(--border-color);
    text-decoration: none;
    color: white;
  }

  .filters__active {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.5;
    z-index: -1;
    width: 100%;
    height: 100%;
    background-color: orangered;
  }
</style>
